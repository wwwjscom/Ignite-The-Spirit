<html>
  <head>
    <%= stylesheet_link_tag 'fonts.css', 'style.css' %>
    <%= javascript_include_tag 'main.js' %>
    <%= image_tag 'lilshimmy.gif', :height => 15 %><br>
    <title><%= yield(:title) %> - Ignite The Spirit</title>
  </head>
  <body class="<%= yield(:body_class) %>" bgcolor=383838 marginwidth=0 marginheight=0 leftmargin=0 topmargin=0>
    <center>

      <%= render :partial => '/layouts/flash_hdr' %>

      <table width="757" margin="0" border=0 cellpadding=0 cellspacing=0>
        <tr>
          <td width=3 bgcolor=ffffff><br></td>
          <td width=115 valign=top align=center bgcolor=e5e5e5>
            <%= image_tag 'lilshimmy.gif', :height => 5 %><br>
            <%= image_tag 'logo.gif' %><br>

            <% if admin? %>
              <span class="admin_nav">
                <ul>
                  <li><%= link_to 'Logout', logout_admins_path %></li>
                  <li><%= link_to 'New post', new_post_path %></li>
                  <li><%= link_to 'New Bio', new_bio_path %></li>
                  <li><%= link_to 'New Cal Year', new_cal_year_path %></li>
                </ul>
              </span>
            <% end %>
          </td>

          <!-- content -->
          <td width=354 valign=top bgcolor=e5e5e5>
            <%= yield %>
          </td>
          <!-- /content -->

          <td width=10 bgcolor=e5e5e5><br></td>
          <td width=3 bgcolor=ffffff><br></td>
          <td width=269 valign=top bgcolor=ffffff>

            <% if params[:controller] == 'store' %>
              <%= image_tag 'store_ignite.gif', :width => 268 %><br>
            <% else %>
              <%= link_to image_tag('2010/buynow.jpg', :width => 268, :height => 171, :border => 0), store_path %><br>
            <% end %>

            <%= image_tag 'lilwhite.gif', :width => 269, :height => 3%><br>
            <table border=0 cellpadding=0 cellspacing=0 bgcolor=FFFFFF>
              <tr>
                <td width=5 bgcolor=f2f2f2> 
                  <%= image_tag 'lilshimmy.gif', :width => 1, :height => 400 %><br />
                </td>
                <td width=263 valign=top bgcolor=f2f2f2>
                  <%= render :partial => '/layouts/recent_news' %>
                  <%= image_tag 'lilshimmy.gif', :height => 15 %><br />
                  <span class=small>
                  </span>
                  <br>
                </td>
              </tr>
            </table>
          </td>
        </tr>
      </table>

    </center>
  </body>
</html>
