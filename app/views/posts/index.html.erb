<h1>Listing posts</h1>

<%= if admin? then link_to 'New post', new_post_path end %>

<% @posts.each do |post| %>
  <div class="news_post">
    <h3><%= link_to post.title.titleize, post %></h3>
    <%= simple_format post.body %>

    <%= post.updated_at.strftime("%m/%d/%Y") %>

    <% if admin? %>
      <br />
      <%= link_to 'Edit', edit_post_path(post) %> | 
      <%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %>
    <% end %>

    <hr />
  </div>
<% end %>
